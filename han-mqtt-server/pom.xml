	<!--POM-->
	<groupId>com.todostudy</groupId>
	<artifactId>han-mqtt-server</artifactId>
	<version>${hanversion}</version>
	<packaging>pom</packaging>

	<name>${project.artifactId}</name>
	<description>han mqtt tools.</description>
	<url>https://www.todostudy.com</url>

	<developers>
		<developer>
			<name>hanson</name>
			<email>317856394@qq.com</email>
			<organization>hanson</organization>
			<organizationUrl>https://todostudy.com</organizationUrl>
			<roles>
				<role>Developer</role>
			</roles>
			<timezone>+8</timezone>
