		<maven.compiler.compilerVersion>11</maven.compiler.compilerVersion>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<maven-compiler-plugin.version>3.8.0</maven-compiler-plugin.version>
		<maven-surefire-plugin.version>2.22.0</maven-surefire-plugin.version>
		<spring-boot.version>2.3.6.RELEASE</spring-boot.version>
		<hutool.version>4.1.6</hutool.version>
		<ignite.version>2.14.0</ignite.version>
	</properties>
	<!--模块-->
	<modules>
		<module>mqtt-common</module>
		<!--<module>mqtt-store</module>-->
		<module>mqtt-broker</module>
		<module>mqtt-example</module>
		<module>han-mqtt-service-spring-stater</module>
		<module>mqtt-server</module>
        <module>mqtt-example-client</module>
    </modules>

	<!--依赖管理-->
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.springframework.boot</groupId>
				<artifactId>spring-boot-dependencies</artifactId>
				<version>${spring-boot.version}</version>
				<type>pom</type>
				<scope>import</scope>
